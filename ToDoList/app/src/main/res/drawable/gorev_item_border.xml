<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border rengi ve genişliği -->
    <solid android:color="#FFFFFF" /> <!-- İç renk -->
    <stroke
        android:width="2dp"
        android:color="#051666" /> <!-- Çerçeve rengi -->

    <!-- Köşeleri yuvarlatmak için -->
    <corners android:radius="16dp"/>

    <!-- İç ve dış boşlukları belirlemek için -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".view.GorevDetayFragment">

    <Button
        android:id="@+id/GuncelleButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Guncelle"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/SilButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Sil"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/DetayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="Göreviniz"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detayTextGorevBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Görev Başlığı"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/detayEditGorevBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(örn:Ev Ödevim)"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detayTextGorevKonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Görev Konusu"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/detayEditGorevKonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(örn: Matematik)"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detayTextGorevDurum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Görev Durumu"
            android:textAlignment="center"
            android:textSize="24sp" />


        <Switch
            android:id="@+id/detayEditGorevDurumu"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Yapılmadı / Yapıldı"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detayTextGorevTarihi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Görev Son Tarihi"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/detayEditTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(01.01.2001"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detayTextGorevAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Görev Açıklaması"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/detayEditGorevAciklama"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:ems="10"
            android:hint="(örn: Matematik Ödevlerimi tamamlamam lazım.)"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>